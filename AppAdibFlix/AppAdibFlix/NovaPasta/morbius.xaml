<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAdibFlix.NovaPasta.morbius"
             BackgroundColor="Black">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <WebView x:Name="morbius_visu"
                         Source="https://youtu.be/S55qvOKW5T0"
                         VerticalOptions="FillAndExpand"
                         BackgroundColor="Black"/>

                <Grid ColumnDefinitions="*,*"
                    RowDefinitions="20,20,300,20">

                    <Image x:Name="Morbius"  Grid.Column="0" Grid.Row="2"/>
                    <StackLayout Grid.Column="1" Grid.Row="2">
                        <Label Text="GÊNERO:" TextColor="Red" />
                        <Label Text="Ação/Aventura" TextColor="White"/>
                        <Label Text="SINÓPSE:" TextColor="Red" />
                        <Label Text="O bioquímico Michael Morbius tenta curar-se de uma doença rara no sangue mas, sem perceber, ele fica infectado com uma forma de vampirismo."  TextColor="White"/>
                    </StackLayout>


                </Grid>




            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>